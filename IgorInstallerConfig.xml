				<PackageList>NikaPckg.xml</PackageList>
				<VersionCheckFile>Boot Nika.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>Indra</name>
				<version>1.90beta</version>
				<PackageList>IndraPckg.xml</PackageList>
				<VersionCheckFile>Boot Indra2.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop32bit</name>
				<version>1</version>
				<PackageList>xopPckg32.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop32Ver.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop64bit</name>
				<version>1</version>
				<PackageList>xopPckg64.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop64Ver.ipf</VersionCheckFile>
			</Package>
			<VersionComment>Beta versions of Irena 2.62, Nika 1.75 and Indra 1.90. </VersionComment>
		</release>
	</InstallerConfig>
</IgorInstaller>