<?xml version="1.0" encoding="UTF-8" ?>
 
<IgorInstaller>
			<!--
				The structure of this file "IgorInstallerConfig.xml" is used to define Installer functionality.
				Its name is fixed in the code. Its location is something similar to this:
				"http://raw.githubusercontent.com/jilavsky/SAXS_IgorCode/master/"		
				VersionCheck defines what the known packages are and what the current releases are
				InstallerConfig lists for each release for all packages : version, PackageList (contains list of paths and files to be copied
				and version check file (file in which code will look for #pragma version =)
				-->
	<VersionCheck>
		<KnownPackages>
			<Package>Irena</Package>
			<Package>Nika</Package>
			<Package>Indra</Package>
			<Package>xop32bit</Package>
			<Package>xop64bit</Package>
		</KnownPackages>
		<current_release>January2017</current_release>
		<current_beta_release>January2017</current_beta_release>
	</VersionCheck>

	<InstallerConfig>
		<release name="January2017">
			<SourceFileAddress>https://github.com/jilavsky/SAXS_IgorCode/archive/January2017.zip</SourceFileAddress>
			<Package>
				<name>Irena</name>
				<version>2.62</version>
				<PackageList>IrenaPckg.xml</PackageList>
				<VersionCheckFile>Boot Irena1 modeling.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>Nika</name>
				<version>1.75</version>
				<PackageList>NikaPckg.xml</PackageList>
				<VersionCheckFile>Boot Nika.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>Indra</name>
				<version>1.90</version>
				<PackageList>IndraPckg.xml</PackageList>
				<VersionCheckFile>Boot Indra2.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop32bit</name>
				<version>1</version>
				<PackageList>xopPckg32.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop32Ver.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop64bit</name>
				<version>1</version>
				<PackageList>xopPckg64.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop64Ver.ipf</VersionCheckFile>
			</Package>
			<VersionComment>Versions of Irena 2.62, Nika 1.75 and Indra 1.90 from 2/22/2017. New releases, updated for Igor 7.</VersionComment>
		</release>
		<release name="November2016-2">
			<SourceFileAddress>https://github.com/jilavsky/SAXS_IgorCode/archive/November2016-2.zip</SourceFileAddress>
			<Package>
				<name>Irena</name>
				<version>2.61</version>
				<PackageList>IrenaPckg.xml</PackageList>
				<VersionCheckFile>Boot Irena1 modeling.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>Nika</name>
				<version>1.74</version>
				<PackageList>NikaPckg.xml</PackageList>
				<VersionCheckFile>Boot Nika.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>Indra</name>
				<version>1.89</version>
				<PackageList>IndraPckg.xml</PackageList>
				<VersionCheckFile>Boot Indra2.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop32bit</name>
				<version>1</version>
				<PackageList>xopPckg32.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop32Ver.ipf</VersionCheckFile>
			</Package>
			<Package>
				<name>xop64bit</name>
				<version>1</version>
				<PackageList>xopPckg64.xml</PackageList>
				<VersionCheckFile>IrenaNikaXop64Ver.ipf</VersionCheckFile>
			</Package>
			<VersionComment>Igor 7 re-release or versions from 6/28/2016. Only minor changes.</VersionComment>
		</release>
		<release name="January2017" beta="true">
			<SourceFileAddress>https://github.com/jilavsky/SAXS_IgorCode/archive/January2017.zip</SourceFileAddress>
			<Package>
				<name>Irena</name>
				<version>2.62beta</version>
				<PackageList>IrenaPckg.xml</PackageList>
				<VersionCheckFile>Boot Irena1 modeling.ipf</VersionCheckFile>
			</Package>
			<Package>
